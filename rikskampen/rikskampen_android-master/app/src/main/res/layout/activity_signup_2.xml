<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".signup.SignUpActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_splash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:orientation="vertical"

        android:id="@+id/fName_lName"
        android:elevation="3dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">












        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_marginTop="@dimen/_18sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginStart="@dimen/_32sdp"
            android:layout_marginEnd="@dimen/_32sdp"
            android:layout_marginBottom="@dimen/_8sdp">

            <EditText
                android:id="@+id/genderValue"
                android:focusable="false"
                android:inputType="none"
                android:focusableInTouchMode="false"
                android:onClick="onGenderClick"
                android:layout_marginStart="18dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:hint="Gender"
                android:gravity="center"
                android:background="@drawable/background_border_circle"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/_15sdp" />






        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginStart="@dimen/_32sdp"
            android:layout_marginEnd="@dimen/_32sdp"
            android:layout_marginBottom="@dimen/_8sdp">


            <EditText
                android:id="@+id/dobValue"
                android:clickable="true"
                android:onClick="onDoBClick"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="none"
                android:layout_marginStart="18dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                style="@android:style/Widget.DeviceDefault.Light.Spinner"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:hint="Date of birth"
                android:background="@drawable/background_border_circle"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/_15sdp" />








        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"

            android:clickable="true"

            android:layout_marginTop="@dimen/_18sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginStart="@dimen/_32sdp"
            android:layout_marginEnd="@dimen/_32sdp"
            android:layout_marginBottom="@dimen/_8sdp">


            <EditText
                android:id="@+id/heightValue"
                android:layout_marginStart="18dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:hint="Height in cm"
                android:inputType="number"
                android:gravity="center"
                android:background="@drawable/background_border_circle"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/_15sdp" />








        </RelativeLayout>


        <RelativeLayout

            android:layout_width="match_parent"

            android:clickable="true"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginStart="@dimen/_32sdp"
            android:layout_marginEnd="@dimen/_32sdp"
            android:layout_marginBottom="@dimen/_8sdp">


            <EditText
                android:id="@+id/weightValue"
                android:layout_marginStart="18dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="number"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:hint="Wight in kg"
                android:gravity="center"
                android:background="@drawable/background_border_circle"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/_15sdp" />











        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_32sdp"
            android:layout_marginLeft="@dimen/_32sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_32sdp"
            android:layout_marginRight="@dimen/_32sdp"
            android:background="@drawable/button_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            >



            <TextView

                fontPath="fonts/MontserratAlternates-Bold.ttf"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_32sdp"
                android:layout_marginLeft="@dimen/_32sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginEnd="@dimen/_32sdp"
                android:layout_marginRight="@dimen/_32sdp"
                android:background="@drawable/button_background"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onNextClick"
                android:text="Next"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText_Sex" />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fName_lName"
        android:layout_height="@dimen/_27sdp">



        <ImageView
            android:rotation="180"
            android:layout_width="@dimen/_21sdp"
            android:src="@drawable/ic_next"
            android:layout_height="@dimen/_18sdp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onBackClick"
            android:clickable="true"
            android:text="Back"
            android:textSize="@dimen/_16sdp"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>