<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_2sdp"
    android:background="@color/white"
    android:layout_height="wrap_content">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"

        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/IngredientName"
            android:layout_marginTop="6dp"
            android:layout_width="@dimen/_68sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:text=""
            android:maxLength="15"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAlignment="textStart"
            android:textSize="8dp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/UnitValue"
            android:layout_marginTop="6dp"
            android:layout_width="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_toLeftOf="@+id/FatsValue"
            android:maxLength="10"
            android:maxLines="1"
            android:ellipsize="end"
            android:text=""
            android:textSize="8dp"
            android:fontFamily="@font/montserrat"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/FatsValue"
            android:layout_marginTop="6dp"
            android:layout_width="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_toLeftOf="@+id/CaloriesValue"
            android:text=""
            android:maxLength="7"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat"
            android:textAlignment="center"
            android:textSize="8dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/CaloriesValue"
            android:layout_marginTop="6dp"
            android:layout_width="@dimen/_30sdp"
            android:maxLength="8"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAlignment="center"
            android:layout_marginEnd="@dimen/_15sdp"
            android:fontFamily="@font/montserrat"
            android:layout_toLeftOf="@+id/ProtineValue"
            android:text=""
            android:textSize="8dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ProtineValue"
            android:layout_marginTop="6dp"
            android:layout_width="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:maxLength="8"
            android:maxLines="1"
            android:layout_toLeftOf="@+id/CarbsValue"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat"
            android:textAlignment="center"
            android:text=""
            android:textSize="8dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/CarbsValue"
            android:layout_marginTop="6dp"
            android:layout_width="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:maxLength="8"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat"
            android:textAlignment="center"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text=""
            android:textSize="8dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="#E9E9E9"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_below="@+id/CarbsValue"
            android:layout_height="1dp">

        </View>
    </RelativeLayout>







</RelativeLayout>