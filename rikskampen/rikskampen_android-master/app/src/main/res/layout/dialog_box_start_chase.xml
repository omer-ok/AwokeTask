<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:layout_marginBottom="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/parentDalioge"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_80sdp"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_25sdp"

        android:elevation="3dp"
        android:gravity="center"
        android:background="@drawable/item_background_white"
        app:layout_constraintBottom_toTopOf="parent">

        <TextView
            android:id="@+id/startDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/black"
            android:text=""
            android:elevation="3dp"
            />
        <TextView
            android:id="@+id/startDialog1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/montserrat"
            android:layout_below="@+id/startDialog"
            android:text=""
            android:textColor="@color/black"
            android:elevation="3dp"
            />




    </RelativeLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="180"
        android:elevation="3dp"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parentDalioge"
        app:srcCompat="@drawable/ic_triangle"/>
</androidx.constraintlayout.widget.ConstraintLayout>