<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".signup.SignUpActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_splash"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/editText_fName"
        fontPath="fonts/MontserratAlternates-Regular.ttf"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/_18sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginStart="@dimen/_32sdp"
        android:layout_marginEnd="@dimen/_32sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:background="@drawable/background_border_circle"
        android:ems="10"
        android:gravity="center"
        android:hint="First name"
        android:textSize="@dimen/_12sdp"
        android:inputType="textEmailAddress"
        android:maxLength="30"
        android:text=""
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0" />


    <EditText
        android:id="@+id/editText_lName"
        fontPath="fonts/MontserratAlternates-Regular.ttf"
        android:layout_width="0dp"
        android:textSize="@dimen/_12sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_32sdp"
        android:layout_marginEnd="@dimen/_32sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:background="@drawable/background_border_circle"
        android:ems="10"
        android:gravity="center"
        android:hint="Last name"
        android:inputType="textEmailAddress"
        android:maxLength="30"
        android:text=""
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_fName"
        app:layout_constraintVertical_bias="0.0" />




    <EditText
        android:id="@+id/editText_email"
        fontPath="fonts/MontserratAlternates-Regular.ttf"
        android:layout_width="0dp"
        android:textSize="@dimen/_12sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_32sdp"
        android:layout_marginLeft="@dimen/_32sdp"
        android:layout_marginEnd="@dimen/_32sdp"
        android:layout_marginRight="@dimen/_32sdp"
        android:background="@drawable/background_border_circle"
        android:ems="10"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:maxLength="100"
        android:text=""
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_lName" />


    <EditText
        android:id="@+id/editText_pass"
        fontPath="fonts/MontserratAlternates-Regular.ttf"
        android:layout_width="0dp"
        android:textSize="@dimen/_12sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_32sdp"
        android:layout_marginLeft="@dimen/_32sdp"
        android:layout_marginEnd="@dimen/_32sdp"
        android:layout_marginRight="@dimen/_32sdp"
        android:background="@drawable/background_border_circle"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPassword"
        android:maxLength="30"
        android:text=""
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_email" />

    <EditText
        android:id="@+id/editText_pass_c"
        fontPath="fonts/MontserratAlternates-Regular.ttf"
        android:layout_width="0dp"
        android:textSize="@dimen/_12sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_32sdp"
        android:layout_marginLeft="@dimen/_32sdp"
        android:layout_marginEnd="@dimen/_32sdp"
        android:layout_marginRight="@dimen/_32sdp"
        android:background="@drawable/background_border_circle"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPassword"
        android:maxLength="30"
        android:text=""
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_pass" />


    <EditText
        android:id="@+id/editText_Age"
        android:visibility="gone"
        fontPath="fonts/MontserratAlternates-Regular.ttf"
        android:layout_width="0dp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginStart="@dimen/_32sdp"
        android:layout_marginLeft="@dimen/_32sdp"
        android:layout_marginEnd="@dimen/_32sdp"
        android:layout_marginRight="@dimen/_32sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:ems="10"
        android:focusable="false"
        android:gravity="center_vertical"
        android:hint="Date of birth"
        android:inputType="textEmailAddress"
        android:maxLength="30"
        android:text=""
        android:clickable="true"
        android:onClick="onAgeClick"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_pass_c"
        app:layout_constraintVertical_bias="0.0" />


    <EditText
        android:id="@+id/editTextHeight"
        android:visibility="gone"
        fontPath="fonts/MontserratAlternates-Regular.ttf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginStart="@dimen/_32sdp"
        android:layout_marginLeft="@dimen/_32sdp"
        android:layout_marginEnd="@dimen/_32sdp"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:hint="Height in cm"
        android:text=""
        android:inputType="number"
        android:textSize="16dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_Age" />


